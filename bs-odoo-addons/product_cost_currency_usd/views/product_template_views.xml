<odoo>
    <record id="product_template_cost_usd_form" model="ir.ui.view">
        <field name="name">product.template.cost.usd.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Localiza el lugar exacto para insertar el campo -->
            <xpath expr="//group/field[@name='product_tag_ids']" position="after">
                <div class="o_row">
                    <div class="o_form_label" style="font-weight: bold; margin-right: 40px;">
                        Moneda
                    </div>
                    <div>
                        <field name="currency_selection" nolabel="1"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
